<Window x:Class="ShopifyNotifierWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopify Notifier" Height="480" Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Informations du serveur -->
        <Border Background="#f0f0f0" CornerRadius="10" Padding="15" Margin="0 0 0 15">
            <StackPanel>
                <TextBlock Text="Statut du serveur :" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="LabelStatus" Text="Serveur actif" FontSize="14" Margin="0 5 0 15"/>

                <TextBlock Text="Adresse publique du serveur :" FontWeight="Bold" FontSize="16"/>
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBlock x:Name="LabelServerUrl"
                               Text="https://lafamiliale.loca.lt"
                               FontSize="14"
                               Width="400"
                               VerticalAlignment="Center"/>
                    <Button Content="Copier"
                            Width="80"
                            Margin="10 0 0 0"
                            Click="BtnCopyServerUrl_Click"/>
                </StackPanel>

                <TextBlock Text="Webhook Shopify :" FontWeight="Bold" FontSize="16" Margin="0 15 0 0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="LabelWebhookUrl"
                               Text="https://lafamiliale.loca.lt/webhook"
                               FontSize="14"
                               Width="400"
                               VerticalAlignment="Center"/>
                    <Button Content="Copier"
                            Width="80"
                            Margin="10 0 0 0"
                            Click="BtnCopyWebhookUrl_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Liste des commandes -->
        <DataGrid x:Name="DataGridOrders"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bouton serveur désactivé -->
        <Button x:Name="BtnStartStop"
                Grid.Row="2"
                Height="40"
                Content="Serveur actif"
                IsEnabled="False"/>
    </Grid>
</Window>
