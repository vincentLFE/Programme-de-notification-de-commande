<Window x:Class="ShopifyNotifierWPF.OrderPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvelle commande !" Height="550" Width="600"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20" Background="#FF1E1E1E" BorderBrush="#FFFFA500" BorderThickness="4" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TextOrderInfo" FontSize="22" FontWeight="Bold" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,15"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="StackOrderDetails" Orientation="Vertical" Margin="0,0,0,10" />
            </ScrollViewer>

            <Button Grid.Row="2" Content="Validé" Height="50" Width="160" HorizontalAlignment="Center" 
                    Background="#FFFFA500" Foreground="Black" FontWeight="Bold" FontSize="18" 
                    Click="BtnValidate_Click" Margin="0,10" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
